<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="7"
    >


    <EditText
        android:id="@+id/editxt_original_text"
        android:layout_margin="5dp"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="@string/editxt_original_text"
        />


    <EditText
        android:id="@+id/editxt_encoded_text"
        android:layout_margin="5dp"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="@string/editxt_encoded_text"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="5dp">

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_encode"
            android:layout_width="140dip"
            android:layout_height="140dip"
            app:cb_color="#99CC00"
            android:src="@drawable/ic_lock_locked"
            app:cb_pressedRingWidth="8dip"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            />

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_decode"
            android:layout_width="140dip"
            android:layout_height="140dip"
            app:cb_color="#99CC00"
            app:cb_pressedRingWidth="8dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_lock_unlocked"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>



</LinearLayout>
